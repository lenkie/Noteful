<h1 class="center">Welcome to Noteful</h1>
<p class="center">Take notes and create todo lists online and access them from anywhere!</p>

<div class='pull-right'>
  <%= link_to "Add a todo", new_todo_path %>
</div>

<div>
  <% @todos.each do |todo| %>
    <%= div_for todo do %>
      <h2><% if todo.complete %> <s><%= todo.body %></s><% else %> <%= todo.body %> <% end %></h2>
      <p><%= link_to 'Show', todo_path(todo) %> |
        <%= link_to 'Edit', edit_todo_path(todo) %> |
        <%= link_to 'Destroy', todo_path(todo), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
  <% end %>
</div>
